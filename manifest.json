{
  "manifest_version": 2,
  "name": "Hyped News",
  "version": "1.8.0",
  "description": "Make Hacker News and Reddit most hyped news stand out, while preserving their order.",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
                 "https://news.ycombinator.com/",
                 "https://news.ycombinator.com/news", 
                 "https://news.ycombinator.com/news2", 
                 "https://news.ycombinator.com/x*"
                 ],
      "js":      ["jquery.min.js", "amplify.js", "content-hackernews.js"]
    },
    {
      "matches": ["http://www.reddit.com/*"],
      "js":      ["jquery.min.js", "amplify.js", "content-reddit.js"]
    }
  ],
  "page_action": {
    "default_title": "Hyped News",
    "default_icon":  "images/hype-amplifier-19.png",
    "default_popup": "options.html"
  },
  "permissions": [
    "tabs"
  ],
  "icons": { 
    "16":  "images/hype-amplifier-16.png",
    "48":  "images/hype-amplifier-48.png",
    "128": "images/hype-amplifier-128.png"
  }
}
