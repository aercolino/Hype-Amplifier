{
  "manifest_version": 2,
  "name": "Hype-Amplifier",
  "version": "1.7.3",
  "description": "See hyped news at a glance, while preserving list order.",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
                 "http://news.ycombinator.com/", 
                 "http://news.ycombinator.com/news", 
                 "http://news.ycombinator.com/news2", 
                 "http://news.ycombinator.com/x*",
                 "https://news.ycombinator.com/", 
                 "https://news.ycombinator.com/news", 
                 "https://news.ycombinator.com/news2", 
                 "https://news.ycombinator.com/x*"
                 ],
      "js":      ["jquery.min.js", "amplify.js", "content-hackernews.js"]
    },
    {
      "matches": ["http://www.reddit.com/*"],
      "js":      ["jquery.min.js", "amplify.js", "content-reddit.js"]
    }
  ],
  "page_action": {
    "default_title": "Hype-Amplifier",
    "default_icon":  "resize-019.png",
    "default_popup": "options.html"
  },
  "permissions": [
    "tabs"
  ],
  "icons": { 
    "16":  "resize-016.png",
    "48":  "resize-048.png",
    "128": "resize-128.png"
  }
}
